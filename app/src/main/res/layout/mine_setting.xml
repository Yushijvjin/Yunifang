<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/fanhui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/back_normal" />

        <TextView
            android:id="@+id/tv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="5"
            android:gravity="center"
            android:text="设置"
            android:textSize="30sp" />

    </LinearLayout>
    <TextView
        android:padding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:text="购物须知"
        android:textSize="30sp"
        android:id="@+id/tv_setting_gouwu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:text="意见反馈"
        android:textSize="30sp"
        android:id="@+id/tv_setting_fankui"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:text="清除缓存"
        android:textSize="30sp"
        android:id="@+id/tv_setting_huancun"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:text="关于我们"
        android:textSize="30sp"
        android:id="@+id/tv_setting_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:text="拨打电话"
        android:textSize="30sp"
        android:id="@+id/tv_setting_tell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:drawableRight="@drawable/next_icon"
        android:text="检查更新"
        android:textSize="30sp"
        android:id="@+id/tv_setting_renew"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_gravity="center_horizontal"
        android:background="#ff5678"
        android:id="@+id/tuichu"
        android:text="退出登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
